                        <script>
                function toggleMenu() {
                    const menuIcon = document.querySelector('#mobileMenuButtonStyle');
                    const mobileMenu = document.querySelector('#mobileMenu');

                    if ( menuIcon.classList.contains('fa-bars')) {
                        mobileMenu.classList.remove('max-sm:hidden');
                        mobileMenu.classList.add('max-sm:flex');
                        menuIcon.classList.remove('fa-bars');
                        menuIcon.classList.add('fa-xmark');
                    } else {
                        mobileMenu.classList.remove('max-sm:flex');
                        mobileMenu.classList.add('max-sm:hidden');
                        menuIcon.classList.remove('fa-xmark');
                        menuIcon.classList.add('fa-bars');
                    }
                }
            </script>

