    <!-- Scripts -->
    <script>
        // --- 1. Loader Logic ---
        window.addEventListener('load', () => {
            const tl = gsap.timeline();

            tl.to("#loader .cup", {
                duration: 1,
                y: -20,
                opacity: 0,
                ease: "power2.inOut",
                delay: 1.5 // Wait for steam animation
            })
            .to("#loader h2, #loader p", {
                duration: 0.5,
                opacity: 0,
                y: 20
            }, "-=0.5")
            .to("#loader", {
                duration: 1,
                yPercent: -100,
                ease: "power4.inOut"
            })
            .from(".hero-title span", {
                duration: 1.5,
                y: 100,
                opacity: 0,
                stagger: 0.2,
                ease: "power3.out"
            }, "-=0.5")
            .to(".hero-subtitle", {
                duration: 1,
                opacity: 1,
                y: 0,
                ease: "power2.out"
            }, "-=1")
            .to(".hero-text", {
                duration: 1,
                opacity: 1,
                y: 0,
                ease: "power2.out"
            }, "-=0.8")
            .to(".hero-btn", {
                duration: 1,
                opacity: 1,
                y: 0,
                ease: "power2.out"
            }, "-=0.8");
        });

        // --- 2. Custom Cursor ---
        const cursorDot = document.querySelector(".cursor-dot");
        const cursorOutline = document.querySelector(".cursor-outline");

        window.addEventListener("mousemove", (e) => {
            const posX = e.clientX;
            const posY = e.clientY;

            // Dot follows instantly
            cursorDot.style.left = `${posX}px`;
            cursorDot.style.top = `${posY}px`;

            // Outline follows with lag (handled by CSS transition or GSAP for smoother)
            // Using GSAP for smoother lag
            gsap.to(cursorOutline, {
                x: posX,
                y: posY,
                duration: 0.15,
                ease: "power2.out"
            });
            
            // Re-center translation logic from CSS removed by GSAP x/y overrides
            // We need to account for the -50% translate in CSS, GSAP overrides transform.
            // Better strategy: update left/top and let CSS handle translate
            // But let's stick to GSAP pure movement for outline:
        });
        
        // Fix for GSAP overriding CSS transform translate(-50%, -50%)
        gsap.set(".cursor-outline", {xPercent: -50, yPercent: -50});
        gsap.set(".cursor-dot", {xPercent: -50, yPercent: -50});

        window.addEventListener("mousemove", (e) => {
            gsap.to(cursorOutline, {
                x: e.clientX,
                y: e.clientY,
                duration: 0.5,
                ease: "power2.out"
            });
            gsap.to(cursorDot, {
                x: e.clientX,
                y: e.clientY,
                duration: 0,
            });
        });

        // Hover effects for cursor
        document.querySelectorAll('a, button, .menu-item').forEach(el => {
            el.addEventListener('mouseenter', () => {
                gsap.to(cursorOutline, {
                    scale: 1.5,
                    backgroundColor: "rgba(212, 165, 116, 0.1)",
                    borderColor: "transparent"
                });
            });
            el.addEventListener('mouseleave', () => {
                gsap.to(cursorOutline, {
                    scale: 1,
                    backgroundColor: "transparent",
                    borderColor: "rgba(212, 165, 116, 0.5)"
                });
            });
        });

        // --- 3. Navbar Scroll Effect ---
        const navbar = document.getElementById('navbar');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('bg-coffee-900', 'shadow-lg', 'py-4');
                navbar.classList.remove('bg-transparent', 'py-6');
            } else {
                navbar.classList.remove('bg-coffee-900', 'shadow-lg', 'py-4');
                navbar.classList.add('bg-transparent', 'py-6');
            }
        });

        // --- 4. Scroll Animations (ScrollTrigger) ---
        gsap.registerPlugin(ScrollTrigger);

        // Parallax Hero Background
        gsap.to(".parallax-bg", {
            yPercent: 20,
            ease: "none",
            scrollTrigger: {
                trigger: "#home",
                start: "top top",
                end: "bottom top",
                scrub: true
            }
        });

        // About Section Reveal
        gsap.from(".about-images", {
            scrollTrigger: {
                trigger: "#about",
                start: "top 70%",
            },
            x: -50,
            opacity: 0,
            duration: 1.5,
            ease: "power3.out"
        });

        gsap.from(".reveal-text", {
            scrollTrigger: {
                trigger: "#about",
                start: "top 70%",
            },
            y: 30,
            opacity: 0,
            duration: 1,
            stagger: 0.2,
            ease: "power3.out"
        });

        // Menu Stagger
        gsap.from(".menu-item", {
            scrollTrigger: {
                trigger: "#menu",
                start: "top 80%",
            },
            y: 50,
            opacity: 0,
            duration: 0.8,
            stagger: 0.1,
            ease: "back.out(1.7)"
        });
        
        // Studio Section Reveal
        gsap.from("#studio h2, #studio p, #studio ul", {
            scrollTrigger: {
                trigger: "#studio",
                start: "top 75%",
            },
            y: 30,
            opacity: 0,
            duration: 1,
            stagger: 0.2,
            ease: "power3.out"
        });

        // --- 5. Menu Filtering ---
        const filterBtns = document.querySelectorAll('.menu-filter');
        const menuItems = document.querySelectorAll('.menu-item');

        filterBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                // Remove active class
                filterBtns.forEach(b => {
                    b.classList.remove('bg-gold-500', 'text-coffee-900', 'border-gold-500');
                    b.classList.add('text-white', 'border-white/20');
                });
                // Add active class
                btn.classList.remove('text-white', 'border-white/20');
                btn.classList.add('bg-gold-500', 'text-coffee-900', 'border-gold-500');

                const filterValue = btn.getAttribute('data-filter');

                menuItems.forEach(item => {
                    if (filterValue === 'all' || item.getAttribute('data-category') === filterValue) {
                        gsap.to(item, {
                            scale: 1,
                            opacity: 1,
                            display: 'block',
                            duration: 0.4
                        });
                    } else {
                        gsap.to(item, {
                            scale: 0.8,
                            opacity: 0,
                            display: 'none',
                            duration: 0.4
                        });
                    }
                });
            });
        });

    </script>
</body>
</html>
